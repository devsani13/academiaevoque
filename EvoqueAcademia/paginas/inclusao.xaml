<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvoqueAcademia.paginas.inclusao"
             BackgroundColor="Black">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Inclusão de Cliente"
                   FontSize="30"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontAttributes="Bold"/>
            <Entry Placeholder="Nome" x:Name="Nome" PlaceholderColor="White"/>
            <Entry Placeholder="Usuário" x:Name="Usuario" PlaceholderColor="White"/>
            <Entry Placeholder="Senha" IsPassword="true" x:Name="Senha" PlaceholderColor="White"/>
            <Button Text="Cadastrar"
                    BackgroundColor="#FD5B1F"
                    Clicked="OnCadastrarClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
