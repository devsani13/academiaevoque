<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvoqueAcademia.paginas.diferenciais">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" HorizontalOptions="Fill" BackgroundColor="#FD5B1F">
                <StackLayout BackgroundColor="White" Padding="20">
                    <Image Source="evoquelogo"
                   HeightRequest="50"/>
                </StackLayout>

                <Label Text="Diferenciais"
                       TextColor="White"
                       FontSize="30"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       BackgroundColor="Black"
                       Margin="0,-6,0,0"
                       Padding="10"/>

                <StackLayout Orientation="Vertical" Margin="0,-6,0,0" BackgroundColor="White">
                    <StackLayout Orientation="Vertical">
                        <Image Source="fitdance"/>
                        <StackLayout Orientation="Horizontal" Margin="0,-6,0,0" Padding="15" HorizontalOptions="Center" Spacing="110">
                            <Image Source="tempo" HeightRequest="70"/>
                            <Image Source="voltagem" HeightRequest="70"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="70" Margin="0,-17,20,0">
                            <StackLayout Orientation="Vertical">
                                <Label Text="Duração" TextColor="Black" FontSize="25"/>
                            </StackLayout>
                            <StackLayout Orientation="Vertical">
                                <Label Text="Intensidade" TextColor="Black" FontSize="25"/>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="122" Margin="0,-12,63,10">
                            <StackLayout Orientation="Vertical">
                                <Label Text="30min" TextColor="Black" FontSize="25" FontAttributes="Bold"/>
                            </StackLayout>
                            <StackLayout Orientation="Vertical">
                                <Label Text="Alta" TextColor="Black" FontSize="25" FontAttributes="Bold"/>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout>
                            <Label Text="Pra você manjar de todos os passinhos as aulas de dança da Evoque Academia são ministradas por professores licenciados pela FitDance."
                               TextColor="Black"
                               FontSize="20"
                               LineBreakMode="WordWrap"
                               HorizontalTextAlignment="Center"
                               Padding="10"
                               MaxLines="10"
                               Margin="0,-10,0,0"/>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>

                <StackLayout Orientation="Vertical" Margin="0,-6,0,0" BackgroundColor="White">
                    <StackLayout Orientation="Vertical">
                        <Image Source="jump"/>
                        <StackLayout Orientation="Horizontal" Margin="0,-6,0,0" Padding="15" HorizontalOptions="Center" Spacing="110">
                            <Image Source="tempo" HeightRequest="70"/>
                            <Image Source="voltagem" HeightRequest="70"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="70" Margin="0,-17,20,0">
                            <StackLayout Orientation="Vertical">
                                <Label Text="Duração" TextColor="Black" FontSize="25"/>
                            </StackLayout>
                            <StackLayout Orientation="Vertical">
                                <Label Text="Intensidade" TextColor="Black" FontSize="25"/>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="122" Margin="0,-12,63,10">
                            <StackLayout Orientation="Vertical">
                                <Label Text="30min" TextColor="Black" FontSize="25" FontAttributes="Bold"/>
                            </StackLayout>
                            <StackLayout Orientation="Vertical">
                                <Label Text="Alta" TextColor="Black" FontSize="25" FontAttributes="Bold"/>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout>
                            <Label Text="Pra você manjar de todos os passinhos as aulas de dança da Evoque Academia são ministradas por professores licenciados pela FitDance."
                               TextColor="Black"
                               FontSize="20"
                               LineBreakMode="WordWrap"
                               HorizontalTextAlignment="Center"
                               Padding="10"
                               MaxLines="10"
                               Margin="0,-10,0,0"/>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>

                <StackLayout Orientation="Vertical" Margin="0,-6,0,0" BackgroundColor="White">
                    <StackLayout Orientation="Vertical">
                        <Image Source="spinning"/>
                        <StackLayout Orientation="Horizontal" Margin="0,-6,0,0" Padding="15" HorizontalOptions="Center" Spacing="110">
                            <Image Source="tempo" HeightRequest="70"/>
                            <Image Source="voltagem" HeightRequest="70"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="70" Margin="0,-17,20,0">
                            <StackLayout Orientation="Vertical">
                                <Label Text="Duração" TextColor="Black" FontSize="25"/>
                            </StackLayout>
                            <StackLayout Orientation="Vertical">
                                <Label Text="Intensidade" TextColor="Black" FontSize="25"/>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="122" Margin="0,-12,63,10">
                            <StackLayout Orientation="Vertical">
                                <Label Text="30min" TextColor="Black" FontSize="25" FontAttributes="Bold"/>
                            </StackLayout>
                            <StackLayout Orientation="Vertical">
                                <Label Text="Alta" TextColor="Black" FontSize="25" FontAttributes="Bold"/>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout>
                            <Label Text="Pra você manjar de todos os passinhos as aulas de dança da Evoque Academia são ministradas por professores licenciados pela FitDance."
                               TextColor="Black"
                               FontSize="20"
                               LineBreakMode="WordWrap"
                               HorizontalTextAlignment="Center"
                               Padding="10"
                               MaxLines="11"
                               Margin="0,-10,0,0"/>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>